<div class="container-sm mx-auto">
  <div class="row mb-5 mt-3 align-items-center">
  <div class="col text-start">
    <h1>Dashboard</h1>
  </div>
  <div class="col text-end">
    <a href="/dashboard/new" class="btn btn-custom">Create New Post <i class='bx bx-plus-circle'></i></a>
  </div>
</div>

  {{#each posts}}
    <div class="card mb-3">
      <div class="card-header">
        <h2 class="card-title">{{title}}</h2>
        <p class="card-created-at">Posted by
          <span class="user">{{user.username}}</span>
          on
          <span class="time">{{formatDate createdA}}</span>
        </p>
      </div>
      <div class="card-body">
        <p>{{content}}</p>
        <div class="d-flex justify-content-end">
          <a href="/posts/{{id}}" class="read-more mx-2">Read More</a>
          <a href="/dashboard/edit/{{id}}" class="edit mx-2"><i
              class="bx bxs-edit-alt icon"
            ></i></a>
          <a
            href="/dashboard/"
            class="delete-post mx-2"
            data-post-id="{{id}}"
          ><i class="bx bxs-trash icon"></i></a>
        </div>
      </div>
    </div>
  {{/each}}

  <script src="/js/dashboard.js"></script>
</div>